presentation AnimationsDemo

theme font "Arial, sans-serif" primary "#1971c2"

header bg "#1971c2" color "#FFFFFF" size "1.6rem" {
    box {
        text {Démonstration des Animations}
    }
}

footer bg "#F5F5F5" color "#333333" size "1rem" {
    box {
        text {© 2026 - Animations Reveal.js}
    }
}

slide intro {
    box {
        text {Bienvenue!}
        text {Appuyez sur espace}
    }
}

slide fadeAnimations {
    box {
        text {Animations FADE}
        text [fragment=fade-in] {Fade in}
        text [fragment=fade-up] {Fade up}
        text [fragment=fade-down] {Fade down}
    }
}

slide animationsGrowShrink {
    box {
        text {GROW et SHRINK}
        text [fragment=grow] {Texte grandit}
        text [fragment=shrink] {Texte rétrécit}
    }
}

slide highlightAnimations {
    box {
        text {HIGHLIGHT}
        text [fragment=highlight-red] {Rouge}
        text [fragment=highlight-green] {Vert}
        text [fragment=highlight-blue] {Bleu}
    }
}

slide conclusion {
    box {
        text [fragment=fade-in] {Conclusion}
        text [fragment=grow] {Merci!}
    }
}
