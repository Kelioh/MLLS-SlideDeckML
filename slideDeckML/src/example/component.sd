presentation Component

component constant_component {
    text {
        Composant sans slot
    }
}

component slot_component {
    box[column = 2, height = 100%] {
        text {
            Ceci est le texte du composant
        }
        slot @slot1 {
            box[column = 2] {
                text {
                    Ceci est le texte par defaut du slot 1 !
                    Il est suivit du composant sans slot !
                }
                constant_component {}
            }
        }
        constant_component {}
        slot @slot2 {}
    }
}

component list_component {
    list [type = unordered, spaceBetweenItems = 50] {
        {First}
        {Second}
        {Third}
    }
}

component quiz_component {
    quiz sort {
        {Which sorting algorithm has average-case O(n log n)?}
        mcq
        option a {Bubble sort}
        option b {Quick sort}
        option c {Merge sort}
        {c}
        revealResultsOnDemand
    }
}

component nested_component {
    constant_component {}
}

slide slide1 [annotable] {
    box {
        slot_component[column = 2, height = 100%] {
            @slot1
            video {
                src {https://youtu.be/AMShoQ_qdc0?si=03Zdvmdtdd8yeCXu}
                alt {Hello World Song}
            }
            @slot2
            image {
                src {https://images4.alphacoders.com/133/thumb-1920-1332281.jpeg}
                alt {Gojo}
            }
        }
    }
}


slide slide2 {
    box {
        constant_component[bold] {}
        constant_component {}
    }
}

slide slide3 {
    slot_component[column = 4, column = 2] {
        @slot2
        text {
            ceci est le texte du slot 2
        }
    }
}

slide slide4 [annotable] {
    list_component[type = ordered] {}
}

slide slide5 {
    quiz_component {}
}

slide slide6 {
    nested_component[underline] {}
}