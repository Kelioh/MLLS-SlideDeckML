presentation Component

component constant_component {
    text[font = "arial"] {
        Composant sans slot
    }
}

component slot_component {
    box[column = 2, height = 100%] {
        text {
            Ceci est le texte du composant
        }
        slot @slot1
        constant_component {}
        slot @slot2
    }
}

slide slide1 {
    box {
        slot_component[column = 12] {
            @slot1
            text {
                Ceci est le texte du slot 1
            }
            @slot2
            text {
                ceci est le texte du slot 2
            }
        }
    }
}


slide slide2 {
    box {
        constant_component[font = "wow"] {}
        constant_component {}
    }
}

slide slide2 {
    slot_component {
        @slot1
        text {
            Ceci est le texte du slot 1
        }
        @slot2
        text {
            ceci est le texte du slot 2
        }
    }
}