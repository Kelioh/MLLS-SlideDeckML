presentation AnimationsDemo

theme font "Arial, sans-serif" primary "#1971c2"

header bg "#1971c2" color "#FFFFFF" size "1.6rem" {
    box {
        text {Démonstration des Animations}
    }
}

footer bg "#F5F5F5" color "#333333" size "1rem" {
    box {
        text {© 2026 - Animations avec Reveal.js}
    }
}

slide intro {
    box {
        text {Bienvenue dans la démo des animations!}
        text {Appuyez sur espace pour voir les animations}
    }
}

slide fadeAnimations {
    box {
        text {Animations de type FADE}
        text [fragment=fade-in] {Texte qui apparaît en fade-in}
        text [fragment=fade-up] {Texte qui monte en fade-up}
        text [fragment=fade-down] {Texte qui descend en fade-down}
        text [fragment=fade-left] {Texte qui vient de la gauche}
        text [fragment=fade-right] {Texte qui vient de la droite}
    }
}

slide animationsGrowShrink {
    box {
        text {Animations GROW et SHRINK}
        text [fragment=grow] {Ce texte grandit (grow)}
        text [fragment=shrink] {Ce texte rétrécit (shrink)}
    }
}

slide highlightAnimations {
    box {
        text {Animations de HIGHLIGHT}
        text [fragment=highlight-red] {Texte surligné en rouge}
        text [fragment=highlight-green] {Texte surligné en vert}
        text [fragment=highlight-blue] {Texte surligné en bleu}
    }
}

slide animationStrike {
    box {
        text {Animation STRIKE (barré)}
        text [fragment=strike] {Ce texte sera barré}
        text {Utile pour montrer ce qui est obsolète!}
    }
}

slide complexAnimation {
    box {
        text {Scénario complexe avec plusieurs animations}
        text [fragment=fade-in] {Étape 1: Introduction du problème}
        text [fragment=fade-up] {Étape 2: Analyse de la situation}
        text [fragment=fade-up] {Étape 3: Proposition de solution}
        text [fragment=highlight-green] {Conclusion: Solution adoptée!}
    }
}

slide currentVisibleAnimation {
    box {
        text {Animation CURRENT-VISIBLE (un seul visible à la fois)}
        text [fragment=current-visible] {Premier point}
        text [fragment=current-visible] {Deuxième point}
        text [fragment=current-visible] {Troisième point}
    }
}

slide conclusion {
    box {
        text [fragment=fade-in] {Conclusion}
        text [fragment=fade-up] {Vous maîtrisez maintenant les animations!}
        text [fragment=grow] {Merci!}
    }
}
